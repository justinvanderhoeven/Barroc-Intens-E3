<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="BarrocIntens.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    RequestedTheme="Light"
    xmlns:local="using:BarrocIntens">
    <Application.Resources>
        <ResourceDictionary>
            <!--Color everything the same in this case every text or button gets ffd700-->
            <SolidColorBrush x:Key="TextControlHeaderForeground" Color="#212121" />
            <SolidColorBrush x:Key="TextControlPlaceholderForeground" Color="#d9d9d9" />
            <SolidColorBrush x:Key="ButtonForeground" Color="#212121" />
            <SolidColorBrush x:Key="ButtonBackground" Color="#ffd700" />
            <SolidColorBrush x:Key="ComboBoxForeground" Color="#212121" />
            <SolidColorBrush x:Key="ButtonBorderBrush" Color="Black" />
            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#ffd700" />
            <Thickness x:Key="ButtonBorderThemeThickness">1</Thickness>

            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->
        </ResourceDictionary>
    </Application.Resources>
</Application>
